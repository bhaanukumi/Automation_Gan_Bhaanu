pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'This is a Build Stage'
                bat "mvn clean"
            }
        }
        stage('Test') {
            steps {
                echo 'This is a Test Stage'
                bat "mvn test"
            }
        }
         stage('Compile') {
            steps {
                echo 'This is a Compile Stage'
                bat "mvn compile"
            }
        }
        stage('Deploy') {
            steps {
                echo 'This is a Deploy Stage'
                bat "mvn clean"
            }
        }
    }
 post{
    
  always{
    emailext body: 'EmailBody1', subject: 'EmailSubject1', to: 'bhaanureaka@gmail.com'
    }
    }
    





